<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ondi.android_ondi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".OndiApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".View.Payment.PaymentActivity"/>
        <activity android:name=".View.Menu.ProductDetail.ProductDetailActivity" />
        <activity android:name=".View.Login.LoginActivity" />
        <activity android:name=".View.Splash.SplashActivity" />
        <activity android:name=".View.SignUpActivity" />
        <activity android:name=".View.MainActivity" />
        <activity android:name=".View.StreamingActivity" />
        <activity android:name=".View.Menu.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>