<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.Login.SignInFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_sing_in"
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/layout_sing_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="45dp"
        app:layout_constraintTop_toBottomOf="@id/img_sing_in"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME"
            android:textStyle="bold"
            android:textSize="34sp"
            android:textColor="@color/dark_slate_blue"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안심할 수 있는 직거래, 지금 시작하세요!"
            android:textSize="12sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/edt_sing_in_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="3dp"
            android:hint="Your Email"
            android:background="@drawable/bg_edit_text"
            android:elevation="3dp"
            android:padding="15dp"
            android:maxLines="1"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/edt_sing_in_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="3dp"
            android:hint="Your Password"
            android:background="@drawable/bg_edit_text"
            android:elevation="3dp"
            android:padding="15dp"
            android:maxLines="1"
            android:inputType="textPassword"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Forgot Password?"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sing_in_sign_in"
        android:layout_width="180dp"
        android:layout_height="46dp"
        app:cornerRadius="23dp"
        android:backgroundTint="@color/dark_slate_blue"
        android:text="Sign-in"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_sing_in"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="83dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="아직 계정이 없으신가요? "
            android:gravity="center"/>
        <TextView
            android:id="@+id/btn_sing_in_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sign up"
            android:gravity="center"
            android:textColor="@color/vermillion"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>